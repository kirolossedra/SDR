import socket
import time
import threading
from collections import deque
from tqdm import tqdm

# Configuration
PORT = 5005
PACKET_SIZE = 1024        # Big enough for any UDP datagram
IDLE_TIMEOUT = 1.0        # Seconds of silence â†’ burst ends

def receiver_function(stop_event, statistics, lock, bursts):
    # Set up UDP socket for broadcast
    sock = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
    sock.setsockopt(socket.SOL_SOCKET, socket.SO_REUSEADDR, 1)
    try:
        sock.setsockopt(socket.SOL_SOCKET, socket.SO_EXCLUSIVEADDRUSE, 0)
    except Exception:
        pass
    sock.setsockopt(socket.SOL_SOCKET, socket.SO_BROADCAST, 1)
    sock.setsockopt(socket.SOL_SOCKET, socket.SO_RCVBUF, 256 * 1024)
    sock.bind(("", PORT))
    sock.settimeout(IDLE_TIMEOUT)

    burst_count = 0
    burst_start = None
    burst_last = None
    thread_name = threading.current_thread().name

    while not stop_event.is_set():
        try:
            data, addr = sock.recvfrom(PACKET_SIZE)
            now = time.time()
            print(f"{thread_name}: Received packet from {addr}")
            if burst_count == 0:
                burst_start = now
            burst_last = now
            burst_count += 1
        except socket.timeout:
            if burst_count > 0:
                elapsed = burst_last - burst_start
                mb_recv = burst_count * PACKET_SIZE / (1024 * 1024)
                mbps = mb_recv * 8 / elapsed
                with lock:
                    statistics.append((thread_name, burst_start, burst_last, burst_count, mb_recv, mbps))
                    bursts[burst_start].append((thread_name, burst_last, burst_count, mb_recv, mbps))
                    # Compute average throughput for this burst
                    all_mbps = [b[4] * 8 / (b[1] - burst_start) if (b[1] - burst_start) > 0 else 0 for b in bursts[burst_start]]
                    avg_mbps = sum([b[4] for b in bursts[burst_start]]) / len(bursts[burst_start])
                    # Print cosmetic single-line
                    thread_parts = [f"{b[0]}: {b[4]:.2f}MiB/{b[4]*8/(b[1]-burst_start):.2f}Mbps"
                                    for b in bursts[burst_start]]
                    print(" | ".join(thread_parts) + f" | Average: {avg_mbps:.2f} Mbps")
                burst_count = 0
                burst_start = None
                burst_last = None
            if stop_event.is_set():
                break
        except OSError as e:
            if getattr(e, 'winerror', None) == 10040:
                now = time.time()
                if burst_count == 0:
                    burst_start = now
                burst_last = now
                burst_count += 1
                print(f"{thread_name}: Received oversized packet")
            else:
                raise
    sock.close()
    print(f"{thread_name}: Stopped.")

def main():
    # Prompt user for number of threads
    N = int(input("Enter the number of threads: "))
    
    # Initialize shared variables
    stop_event = threading.Event()
    statistics = deque()
    lock = threading.Lock()
    threads = []
    bursts = {}  # key = burst_start, value = list of stats for that burst

    # Create threads
    for i in range(N):
        thread = threading.Thread(
            target=receiver_function,
            args=(stop_event, statistics, lock, bursts),
            name=f"Thread-{i+1}"
        )
        threads.append(thread)

    # Start threads with progress bar
    for thread in tqdm(threads, desc="Starting threads"):
        thread.start()

    print(f"Listening for broadcasts on port {PORT} with {N} threads. Press Ctrl+C to stop...")

    # Wait for interruption
    try:
        while True:
            time.sleep(1)
    except KeyboardInterrupt:
        print("\nInterrupted by user, stopping threads...")
        stop_event.set()
        for thread in threads:
            thread.join()

    # Display throughput table
    print("\nSummary of Burst Throughputs:")
    for burst_start, entries in sorted(bursts.items(), key=lambda x: x[0]):
        start_str = time.strftime('%H:%M:%S', time.localtime(burst_start))
        parts = []
        for thread_name, burst_last, burst_count, mb_recv, mbps in entries:
            end_str = time.strftime('%H:%M:%S', time.localtime(burst_last))
            parts.append(f"{thread_name}: {mbps:.2f} Mbps ({mb_recv:.2f} MiB, {burst_count} pkts, {start_str}-{end_str})")
        avg_mbps = sum(e[4] for e in entries) / len(entries)
        print(" | ".join(parts) + f" | Average: {avg_mbps:.2f} Mbps")

if __name__ == "__main__":
    main()
